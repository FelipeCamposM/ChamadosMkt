generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int @id @default(autoincrement())
  name     String
  email    String @unique
  senha    String
  createAt DateTime @default(now()) 
}

model Chamado {
  id          Int @id @default(autoincrement())
  name        String
  subtitle    String
  description String
  createAt    DateTime @default(now()) 
}

model Chamado_Caracterizado {
  id          Int @id @default(autoincrement())
  name        String
  subtitle    String
  description String
  encharged   String 
  createAt    DateTime @default(now())
  deadline    DateTime
  priority    String
}

model Chamado_Concluido {
  id          Int @id @default(autoincrement())
  name        String
  subtitle    String
  description String
  encharged   String
  createAt    DateTime
  finishedAt  DateTime @default(now()) 
}
